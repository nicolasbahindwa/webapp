@model EditRoleViewModel

@{ 
    ViewBag.Tile = "EDIT ROLE";


}
<h1>EDIT ROLE</h1>

<form method="post" class="mt-3">

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>

        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control"/>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>

        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" placeholder="Name" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <button style="width:auto" type="submit" class="btn btn-secondary"> Update</button>
        <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
    </div>
    <div class="card">
        <div class="card-header">
            <h3>Users in this roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {

                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">No user in this role</h5>

            }

        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-controller="Administration" class="btn btn-primary" 
              asp-route-roleId="@Model.Id" style="width:auto">Add User or remove user</a>
         

        </div>

    </div>
</form>