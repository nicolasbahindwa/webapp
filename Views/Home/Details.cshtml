                <h4>Employee ID : @Model.Employee.Email</h4>
                <h4>Employee ID : @Model.Employee.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class=" btn btn-primary m-1">Back</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@Model.Employee.id"
                   class=" btn btn-primary m-1">edit</a>
                <a asp-controller="home" asp-action="delete" asp-route-id="@Model.Employee.id"
                   class=" btn btn-danger m-1">delete</a>
            </div>
        </div>
    </div>
</div>

